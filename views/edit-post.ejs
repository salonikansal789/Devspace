<%- include('includes/header') %>
<script>
    const urlParams = new URLSearchParams(window.location.search);
    const successMessage = urlParams.get('success');
    if (successMessage) {
      const alertElement = document.createElement('div');
      alertElement.className = 'alert alert-success';
      alertElement.textContent = successMessage;
      document.body.appendChild(alertElement);
    }
  </script>
  
  
  <div class="container py-md-5 container--narrow">
  
    <a class="small font-weight-bold"  href="/post/<%= post._id%>">&laquo; Back to post</a>
    
    
    <form class="mt-3" action="/post/<%= post._id %>/edit" method="POST">
      <div class="form-group">
        <label for="post-title" class="text-muted mb-1"><small>Title</small></label>
        <input required name="title" value="<%= post.title %>" id="post-title" class="form-control form-control-lg form-control-title" type="text" placeholder="" autocomplete="off">
      </div>

      <div class="form-group">
        <label for="post-body" class="text-muted mb-1"><small>Developer Content</small></label>
        <textarea required name="body" id="post-body" class="body-content tall-textarea form-control" type="text"><%= post.body %></textarea>
      </div>
      
      <button class="btn btn-info">Save Updates</button>
    </form>
  </div>
  
  <!-- footer begins -->
  <%- include('includes/footer') %>