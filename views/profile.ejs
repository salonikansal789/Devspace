<%- include('includes/header') %>
<script>
  const urlParams = new URLSearchParams(window.location.search);
  const successMessage = urlParams.get('success');
  if (successMessage) {
    const alertElement = document.createElement('div');
    alertElement.className = 'alert alert-success';
    alertElement.textContent = successMessage;
    document.body.appendChild(alertElement);
  }


</script>
  
  <div class="container py-md-5 container--narrow">
   
    <%- include('includes/sharedProfile') %>
    <div class="list-group">
        <% posts.forEach(post => { %>
            <a href="/post/<%= post._id %>" class="list-group-item list-group-item-action">
              <img class="avatar-tiny" src="<%= profileAvatar %>">
              <strong><%= post.title %></strong> on <%= post.createdAt ? post.createdAt.toLocaleDateString('en-GB') : '' %>
            </a>
          <% }) %>
    </div>
  </div>
  
  <%- include('includes/footer') %>